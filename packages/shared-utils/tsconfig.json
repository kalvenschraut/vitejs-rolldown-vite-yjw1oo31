{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "module": "EsNext",
    "target": "ESNext",
    "sourceMap": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "typeRoots": [
      "./src/types",
      "./test/types",
      "./node_modules/@types",
      "./node_modules/@rtvision/types/dist"
    ],
    "paths": {
      "#src/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"]
}
